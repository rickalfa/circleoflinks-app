{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "types": ["vite/client"],
    "noEmit": true,
    "ignoreDeprecations": "6.0",
    "paths": {
       "@/*": ["./resources/js/*"]
      }
  },
  "include": ["resources/js/**/*.ts"]
}
